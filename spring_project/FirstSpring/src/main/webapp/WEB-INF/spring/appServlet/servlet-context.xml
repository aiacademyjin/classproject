	</beans:bean>
	
	<beans:bean id="memberListService"
				class="com.aia.firstspring.member.service.MemberListService"/>
	
	 -->
	
	
	
	
	
	
	
	
	
	
	<context:component-scan base-package="com.aia.firstspring" />
	
	
	
</beans:beans>
