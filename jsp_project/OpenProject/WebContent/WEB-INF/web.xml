<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>OpenProject</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 서블릿 등록 -->
  <servlet>
  	<servlet-name>Loader</servlet-name>
  	<servlet-class>jdbc.Loader</servlet-class>
  	<init-param>
  		<param-name>driver</param-name>
  		<param-value>com.mysql.cj.jdbc.Driver</param-value>
  	</init-param>
  	<load-on-startup>1</load-on-startup>
  </servlet>


	<!-- 필터 등록 -->
	<filter>
		<filter-name>LoginCheck</filter-name>
		<filter-class>filter.LoginCheckFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>LoginCheck</filter-name>
		<url-pattern>/member/mypage/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LoginCheck</filter-name>
		<url-pattern>/member/manager/*</url-pattern>
	</filter-mapping>
	
	
	
	
	
	
	
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	
	<!-- 컨텍스트 파라미터 등록 -->
	<context-param>
		<param-name>jdbcDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	
	<listener>
		<listener-class>listener.DBCPInitListener</listener-class>
	</listener>
	
	
	
	
  
  
  
</web-app>
